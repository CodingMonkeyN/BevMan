{
  "arrowParens": "avoid",
  "attributeGroups": [
    "$ANGULAR_STRUCTURAL_DIRECTIVE",
    "$ANGULAR_ELEMENT_REF",
    "^mat-",
    "^mat",
    "^cdk",
    "^type$",
    "$ANGULAR_INPUT",
    "$ANGULAR_ANIMATION",
    "$ANGULAR_ANIMATION_INPUT",
    "$ANGULAR_TWO_WAY_BINDING",
    "$ANGULAR_OUTPUT",
    "^(id|name)$",
    "$DEFAULT",
    "^class$",
    "^data-",
    "^aria-",
    "^translate$"
  ],
  "attributeSort": "ASC",
  "bracketSameLine": true,
  "jsonRecursiveSort": true,
  "overrides": [
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "plugins": [
    "prettier-plugin-organize-attributes",
    "prettier-plugin-sort-json",
    "prettier-plugin-tailwindcss"
  ],
  "printWidth": 120,
  "singleQuote": true,
  "tailwindConfig": "./tailwind.config.js"
}
